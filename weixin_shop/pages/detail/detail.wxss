/* pages/detail/detail.wxss */

.book-img{
 width: 100%;
 height: 800rpx
}

.book-title{
  font: 30rpx tahoma,arial,Microsoft YaHei,Hiragino Sans GB,"宋体",sans-serif;
  height: 60rpx;
}
.book-price{
  color: #e4393c;
  font-size: 40rpx;
}

.book-price text{
  color: #999999;
  font-size: 30rpx;
  text-decoration:line-through;
}

.book-des{
  font: 25rpx tahoma,arial,Microsoft YaHei,Hiragino Sans GB,"宋体",sans-serif;
}

.book-detail view{
  margin: 20rpx;
}

.book-sep{
  border: 20rpx solid #E5E5E5;
}
.book-content{
  text-align: center;
  font: 50rpx tahoma,arial,Microsoft YaHei,Hiragino Sans GB,"宋体",sans-serif;
}
.book-bottom{
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background: white;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.book-bottom image{
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
}
.cart{
  width: 45%;
  background: #FF9600;
  text-align: center;
  color: #FFFFFF;
 
}
.buy-now{
  width: 45%;
  background: #E93B3D;
  text-align: center;
  color: #FFFFFF
}


.buy-count{
  height: 46px;
  display: flex;
  flex-direction: row;
}
.buy-text{
  height: 46px;
  line-height: 46px;
  text-align: center;
  margin-left: 10px;
}

.cart-num{
  position: absolute;
  margin-top: 10rpx;
  margin-left: -30rpx;
  color: white;
  width: 40rpx;
  height: 40rpx;
  background: #E93B3D;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  display: inline-block;
  font-size: 25rpx;
}